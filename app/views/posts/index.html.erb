<div class="header">
  <h1>Blog</h1>
</div>


<div class="row">
  <%@posts.each do |post| %>
    <div class="thumbnail">
      <h2><%=post.title%></h2>
      <h3><%=post.content%></h3>
      <% if current_user %>
      <%= link_to "Edit Post", edit_post_path(post), class: "btn btn-default" %>
      <%= link_to "Delete Post", post, method: :delete, date: {confirm: "Are you sure?"}, class: "btn btn-default" %>
      <%end%>

    </div>
  <%end%>
</div>

<% if current_user %>
<%= link_to "Add Post", new_post_path, class: "btn btn-default"  %>
<%end%>
